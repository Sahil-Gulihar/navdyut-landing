---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";

// Import necessary images
import blueprints from "@images/blueprints-image.avif";
import personWorking from "@images/person-working.avif";
import beforeAfter from "@images/before-after.avif";
import constructionWorkers from "@images/construction-workers.avif";
import aerialView from "@images/aerial-view.avif";
import usingTools from "@images/using-tools.avif";
import progressBuilding from "@images/progress-building.avif";
import underConstruction from "@images/under-construction.avif";
import { SITE } from "@data/constants";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: "Expert Consultation for Your AI Needs",
    subTitle:
      "Navigating the world of AI can be complex. Our expert consultation services provide you with the guidance needed at every step, ensuring informed decisions for your Assamese language AI projects. Whether you're exploring the possibilities or planning a specific implementation, our specialists offer tailored advice on model selection, integration strategies, and best practices.",
    single: false,
    imgOne: personWorking,
    imgOneAlt: "Person discussing AI solutions on a digital tablet.",
    imgTwo: personWorking,
    imgTwoAlt: "Software development interface.",
  },
  {
    isRightSection: false,
    title: "Developing Custom Assamese AI Solutions",
    subTitle:
      "Our skilled AI engineers bring precision and innovation to every development project. From integrating existing Navdyut AI capabilities to building bespoke solutions tailored to your unique requirements, we offer reliable development services to turn your AI vision into reality. We ensure the highest standards of accuracy and efficiency, utilizing cutting-edge AI techniques and our deep understanding of the Assamese language.",
    img: personWorking,
    imgAlt: "Code snippets and neural network diagrams.",
    btnExists: true,
    btnTitle: "Learn More",
    btnURL: "#",
  },
  {
    isRightSection: true,
    title: "Seamless Project Management for AI Integration",
    subTitle:
      "Effective project management is crucial for successful AI integration. Navdyut AI provides thorough planning and robust management services to keep your AI projects on track and within scope. Let us handle the complexities of API integration, data management, and workflow coordination, allowing you to focus on the outcomes.",
    single: false,
    imgOne: personWorking,
    imgOneAlt: "Team collaborating on an AI project plan.",
    imgTwo: personWorking,
    imgTwoAlt: "Dashboard displaying AI project progress.",
  },
  {
    isRightSection: false,
    title: "Dedicated Support and Ongoing Maintenance",
    subTitle:
      "Our commitment to your success extends beyond deployment. Navdyut AI offers ongoing support and maintenance services to ensure the long-term performance and reliability of your Assamese language AI solutions. From troubleshooting to model updates, our responsive team is here to provide seamless assistance.",
    img: personWorking,
    imgAlt: "Customer support agent assisting with AI integration.",
  },
  {
    isRightSection: true,
    title: "Tailored AI Strategies for Unique Business Needs",
    subTitle:
      "For our enterprise clients, Navdyut AI offers custom AI strategies designed to address specific business challenges. By understanding your unique goals and data, we engineer tailored solutions aimed at optimizing your operations, enhancing customer engagement, and driving innovation through Assamese language AI.",
    single: false,
    imgOne: personWorking,
    imgOneAlt: "Flowchart illustrating a custom AI solution.",
    imgTwo: personWorking,
    imgTwoAlt: "Data analysis and AI model visualization.",
    btnExists: true,
    btnTitle: "Read more",
    btnURL: "#",
  },
];

const pageTitle: string = `Services | ${SITE.title}`;
---

<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://navdyut.com/services",
    "url": "https://navdyut.com/services",
    "name": "Expert Consultation Services | navdyut",
    "description": "Uniting expertise with your vision, navdyut provides exceptional service and comprehensive solutions in the hardware and construction industry, from consultation to project completion.",
    "isPartOf": {
        "@type": "WebSite",
        "url": "https://navdyut.com",
        "name": "navdyut",
        "description": "navdyut offers top-tier hardware tools and expert construction services to meet all your project needs."
    },
    "inLanguage": "en-US"
  }}
>
  <!--MainSection is the introductory section of the page, it also contains a CTA button-->
  <MainSection
    title="Uniting Expertise with Your Vision"
    subTitle="At navdyut, we take pride in providing comprehensive solutions and exceptional service in the hardware and construction industry. Our experienced team is dedicated to supporting your project from inception to completion with a range of specialized services."
    btnExists={true}
    btnTitle="Schedule a Consultation"
    btnURL="#"
  />
  <!-- RightSection and LeftSection contain details about various services along with pertinent imagery.
  They alternate for variety in design.
  The 'btnExists' property is used to toggle the display of a button in these sections.
  When btnExists={true}, a button is displayed.
  This can be used to link to more detailed information or related resources.
  RightSection can also conditionally render one or two images based on the 'single' property.
  If 'single' is true, it displays one image, otherwise it displays two.
  -->
  {
    articles.map(article => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }
  <!--FeaturesStats section showcases essential stats valuable to users-->
  <FeaturesStats
    title="By the Numbers"
    subTitle="Our commitment to quality and reliability is evident in every project we undertake. At navdyut, we are dedicated to delivering industry-leading services that ensure your construction projects are built to last."
    mainStatTitle="96%"
    mainStatSubTitle="of our clients rate their experience with navdyut as exceptional"
    stats={[
      {
        stat: "99.8%",
        description: "project completion rate",
      },
      {
        stat: "5,000+",
        description: "successful installations",
      },
      {
        stat: "85%",
        description: "client growth year-over-year",
      },
    ]}
  />
</MainLayout>
