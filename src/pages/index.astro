  <PricingSection pricing={pricing} />

  <FAQ title="Frequently<br />asked questions" faqs={faqs} />
  <HeroSectionAlt
  title="Empowering Assamese Communication with AI"
  subTitle="Navdyut AI is the fastest and only existing AI built to understand and speak Assamese, developed by Navdyut AI and Research Labs."
  url="https://chat.navdyut.com"
/>
</MainLayout>
